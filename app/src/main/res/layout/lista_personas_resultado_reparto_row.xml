<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/apatxas_dos_lineas_row_style">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/texto_principal_lista" />

        <TextView
            android:id="@+id/totalGastoReparto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/texto_secundario_lista" />
    </LinearLayout>

    <ImageView
        android:id="@+id/indicadorRepartoPagado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:src="@drawable/ic_apatxas_estado_persona_reparto_pendiente" />



</LinearLayout>
