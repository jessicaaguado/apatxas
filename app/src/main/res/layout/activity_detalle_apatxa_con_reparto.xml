<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/subactivity_detalle_informacion_basica_apatxa" />



    <TextView
        android:id="@+id/resumenGastosApatxaDetalle"
        style="@style/apatxas_valor_defecto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/apatxas_altura_elemento_listado"
        android:layout_marginLeft="@dimen/apatxas_padding_izquierdo_defecto"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_apatxas_gastos"
        android:drawablePadding="@dimen/apatxas_padding_entre_imagen_texto"
        android:gravity="center_vertical"/>

    <View
        android:id="@+id/separador3DetalleApatxa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:background="@color/apatxascolors_color_linea_divisoria" />

    <TextView
        android:id="@+id/estadoApatxaDetalle"
        style="@style/apatxas_valor_importante"
        android:layout_width="match_parent"
        android:layout_height="@dimen/apatxas_altura_elemento_listado"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="@dimen/apatxas_margen_vertical_defecto"
        android:layout_marginBottom="@dimen/apatxas_margen_vertical_defecto"/>

    <include layout="@layout/subactivity_lista_resultado_reparto" />

</LinearLayout>