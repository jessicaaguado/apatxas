    <style name="texto_principal_lista" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/texto_listado_linea1</item>
        <item name="android:textColor">@color/apatxascolors_gris_oscuro</item>
    </style>
    
    <style name="texto_secundario_lista" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/texto_listado_linea2</item>
        <item name="android:textColor">@color/apatxascolors_gris_claro</item>
    </style>
    
    <style name="texto_extra_lista" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/texto_listado_extra_importante</item>
        <item name="android:textColor">@color/apatxascolors_gris_medio</item>
    </style>
    
    <style name="texto_cabecera_lista" parent="@style/texto_principal_lista">
        <item name="android:textColor">@color/apatxascolors_color</item>
