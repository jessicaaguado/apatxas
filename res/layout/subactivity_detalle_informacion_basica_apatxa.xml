<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/informacionBasicaApatxaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/apatxascolors_color"
        android:paddingBottom="@dimen/apatxas_padding_inferior_defecto"
        android:paddingLeft="@dimen/apatxas_padding_izquierdo_defecto"
        android:paddingRight="@dimen/apatxas_padding_derecho_defecto"
        android:paddingTop="@dimen/apatxas_padding_superior_defecto" >

        <TextView
            android:id="@+id/nombreApatxaDetalle"
            style="@style/apatxas_label_titulo_destacada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/apatxas_padding_inferior_defecto" />

        <TextView
            android:id="@+id/fechaApatxaDetalle"
            style="@style/apatxas_valor_destacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nombreApatxaDetalle" />

        <TextView
            android:id="@+id/labelBoteInicialApatxaDetalle"
            style="@style/apatxas_label_destacada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fechaApatxaDetalle"
            android:text="@string/bote_inicial" />

        <TextView
            android:id="@+id/boteInicialApatxaDetalle"
            style="@style/apatxas_valor_destacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/labelBoteInicialApatxaDetalle"
            android:layout_alignParentLeft="@+id/labelBoteInicialApatxaDetalle"
            android:layout_toRightOf="@+id/labelBoteInicialApatxaDetalle" />

        <ImageButton
            android:id="@+id/botonEditarInformacionBasicaApatxas"
            style="@style/apatxas_boton_solo_icono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nombreApatxaDetalle"
            android:contentDescription="Editar informaciÃ³n basica"
            android:onClick="irEditarInformacionBasicaApatxa"
            android:src="@drawable/ic_action_apatxas_editar_detalle" />
    </RelativeLayout>

</merge>