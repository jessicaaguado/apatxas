<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/apatxas_detalle_activity">

        <EditText
            android:id="@+id/nombreApatxa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:hint="@string/nombre">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/fechaApatxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nombreApatxa"
            android:hint="@string/patron_fecha_dia_mes_ano_ux"
            android:inputType="date" />


        <EditText
            android:id="@+id/boteInicialApatxa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fechaApatxa"
            android:hint="@string/bote_inicial"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/descontarBoteInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/boteInicialApatxa"
            android:text="@string/descontar_bote_inicial_gasto_reparto"
            android:visibility="gone" />

    </LinearLayout>

</merge>