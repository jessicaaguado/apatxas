<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/apatxas_dos_lineas_row_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fotoContacto"
        android:layout_width="@dimen/apatxas_persona_avatar_tamano"
        android:layout_height="@dimen/apatxas_persona_avatar_tamano"
        android:layout_gravity="center_vertical|center_horizontal"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/apatxascolors_borde_avatar"
        app:riv_border_width="1dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="false"
        app:riv_oval="true"
        app:riv_tile_mode="clamp" />


    <TextView
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.7"
        android:paddingLeft="@dimen/apatxas_padding_izquierdo_row_una_linea_con_avatar"
        android:textAppearance="@style/texto_principal_lista"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/apatxas_padding_izquierdo_row_una_linea_con_avatar">

        <TextView
            android:id="@+id/totalGastoRepartoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textAppearance="@style/texto_secundario_lista" />

        <TextView
            android:id="@+id/totalGastoRepartoCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textAppearance="@style/texto_secundario_lista" />
    </LinearLayout>


</LinearLayout>
