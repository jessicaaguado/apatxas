<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/apatxascolors_color_cabecera_lista" >

    <TextView
        android:id="@+id/listaGastosApatxaCabecera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="left"
        android:padding="5dp"
        android:textAppearance="@style/texto_cabecera_lista" />
    
    <ImageButton
        android:id="@+id/botonAnadirGastoApatxa"
        style="@style/boton_icono_accion_cabecera_lista"        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.2"
        android:src="@drawable/ic_action_apatxas_anadir_gasto_apatxa"
        android:contentDescription="@string/anadir_gasto"
        android:onClick="anadirGasto" />

</LinearLayout>