<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="texto_lista" parent="@style/TextAppearance.AppCompat.Subhead"></style>

    <style name="texto_principal_lista" parent="@style/texto_lista">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto_secundario_lista" parent="@style/TextAppearance.AppCompat.Body2"></style>

    <style name="texto_extra_lista" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/apatxascolors_color_destacado</item>
    </style>

    <style name="texto_cabecera_lista" parent="@style/texto_lista" />

    <style name="apatxas_cabecera_style">
        <item name="android:layout_height">@dimen/apatxas_altura_elemento_listado</item>
        <item name="android:background">@color/apatxascolors_color_cabecera_lista</item>
        <item name="android:drawablePadding">@dimen/apatxas_padding_entre_imagen_texto</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/apatxas_padding_izquierdo_defecto</item>
        <item name="android:textAppearance">@style/texto_cabecera_lista</item>
    </style>

    <style name="apatxas_row_style">
        <item name="android:layout_height">@dimen/apatxas_altura_elemento_listado</item>
        <item name="android:paddingLeft">@dimen/apatxas_padding_izquierdo_defecto</item>
        <item name="android:paddingRight">@dimen/apatxas_padding_derecho_defecto</item>
    </style>

</resources>