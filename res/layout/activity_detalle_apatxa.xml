<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    style="@style/apatxas_detalle_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jagusan.apatxas.activities.DetalleApatxaActivity" >

    <TextView
        android:id="@+id/nombreApatxaDetalle"
        style="@style/apatxas_valor_destacado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Comida en la sociedad" />

    <TextView
        android:id="@+id/fechaApatxaDetalle"
        style="@style/apatxas_valor_destacado_nivel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nombreApatxaDetalle"
        android:text="28/10/2014" />

    <TextView
        android:id="@+id/labelBoteInicialApatxaDetalle"
        style="@style/apatxas_label_destacada_nivel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fechaApatxaDetalle"
        android:text="Bote inicial:" />

    <TextView
        android:id="@+id/boteInicialApatxaDetalle"
        style="@style/apatxas_valor_destacado_nivel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelBoteInicialApatxaDetalle"
        android:layout_alignParentLeft="@+id/labelBoteInicialApatxaDetalle"
        android:layout_toRightOf="@+id/labelBoteInicialApatxaDetalle"
        android:text="125,00 €" />

    <ImageButton
        android:id="@+id/botonEditarInformacionBasicaApatxas"
        style="@style/boton_pie_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Editar información basica"
        android:src="@drawable/ic_action_apatxas_editar_detalle" />

    <View
        android:id="@+id/separadorDetalleApatxa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/labelBoteInicialApatxaDetalle"
        android:layout_marginBottom="@dimen/apatxas_linea_divisora_margen_inferior"
        android:layout_marginTop="@dimen/apatxas_linea_divisora_margen_superior"
        android:background="@color/apatxascolors_color_claro2" />

    <TextView
        android:id="@+id/labelGastoTotalApatxaDetalle"
        style="@style/apatxas_label_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separadorDetalleApatxa"
        android:text="Total:" />

    <TextView
        android:id="@+id/gastoTotalApatxaDetalle"
        style="@style/apatxas_valor_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelGastoTotalApatxaDetalle"
        android:layout_toRightOf="@+id/labelGastoTotalApatxaDetalle"
        android:text="125,00 €" />

    <TextView
        android:id="@+id/estadoApatxaDetalle"
        style="@style/apatxas_valor_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gastoTotalApatxaDetalle"
        android:layout_alignBottom="@+id/gastoTotalApatxaDetalle"
        android:layout_marginLeft="@dimen/apatxas_margen_defecto"
        android:layout_toRightOf="@+id/gastoTotalApatxaDetalle"
        android:text="( Pagado )" >
    </TextView>

    <TextView
        android:id="@+id/labelBoteApatxaDetalle"
        style="@style/apatxas_label_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/labelGastoTotalApatxaDetalle"
        android:text="Bote:" />

    <TextView
        android:id="@+id/boteApatxaDetalle"
        style="@style/apatxas_valor_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelBoteApatxaDetalle"
        android:layout_alignBottom="@+id/labelBoteApatxaDetalle"
        android:layout_toRightOf="@+id/labelBoteApatxaDetalle"
        android:text="125,00 €" />

    <ListView
        android:id="@+id/listaGastosApatxaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/boteApatxaDetalle"
        android:layout_marginTop="@dimen/apatxas_margen_defecto"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

    <ListView
        android:id="@+id/listaPersonasApatxaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listaGastosApatxaDetalle"
        android:layout_marginTop="@dimen/apatxas_margen_defecto"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

</RelativeLayout>