<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="apatxas_default_activity">
        <item name="android:paddingLeft">@dimen/apatxas_padding_izquierdo_defecto</item>
        <item name="android:paddingRight">@dimen/apatxas_padding_derecho_defecto</item>
        <item name="android:paddingTop">@dimen/apatxas_padding_superior_defecto</item>
    </style>

    <style name="apatxas_detalle_activity" parent="@style/apatxas_default_activity">                        
    </style>
    
    <style name="apatxas_listado_activity" parent="@style/apatxas_default_activity">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>                        
    </style>
    
    <style name="apatxas_texto_label_defecto" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/texto_contenido_activity_normal</item>        
    </style>
    <style name="apatxas_texto_valor_defecto" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/texto_contenido_activity_normal</item>        
    </style>
    
    <style name="apatxas_label_defecto">
        <item name="android:textAppearance">@style/apatxas_texto_label_defecto</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="apatxas_valor_defecto">
        <item name="android:textAppearance">@style/apatxas_texto_valor_defecto</item>
    </style>
    
    <style name="apatxas_label_destacada">
        <item name="android:textAppearance">@style/apatxas_texto_label_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/texto_contenido_activity_importante</item>
    </style>
    <style name="apatxas_label_destacada_nivel2">
        <item name="android:textAppearance">@style/apatxas_texto_label_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color_claro2</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="apatxas_label_destacada_nivel3">
        <item name="android:textAppearance">@style/apatxas_texto_label_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color_claro1</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="apatxas_valor_destacado">
        <item name="android:textAppearance">@style/apatxas_texto_valor_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color</item>
        <item name="android:textSize">@dimen/texto_contenido_activity_importante</item>
    </style>
    <style name="apatxas_valor_destacado_nivel2">
        <item name="android:textAppearance">@style/apatxas_texto_valor_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color_claro2</item>
    </style>
    <style name="apatxas_valor_destacado_nivel3">
        <item name="android:textAppearance">@style/apatxas_texto_valor_defecto</item>
        <item name="android:textColor">@color/apatxascolors_color_claro1</item>
    </style>
    
    <style name="apatxas_boton_solo_icono" parent="@style/ButtonApatxasColors">
        <item name="android:textAppearance">@style/texto_pie_lista</item>        
        <item name="android:textColor">@color/apatxascolors_gris_medio</item>
        <item name="android:background">@color/apatxascolors_color_fondo</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:minHeight">0dip</item>
    </style>
    
</resources>