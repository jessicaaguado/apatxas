<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="texto_principal_lista">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="texto_secundario_lista">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="texto_extra_lista" parent="texto_secundario_lista">

    </style>

    <style name="texto_cabecera_lista">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/apatxascolors_color</item>
    </style>

    <style name="apatxas_cabecera_style">
        <item name="android:background">@color/apatxascolors_color_cabecera_lista</item>
        <!--item name="android:paddingTop">@dimen/apatxas_padding_superior_cabecera_listado</item>
        <item name="android:paddingBottom">@dimen/apatxas_padding_inferior_cabecera_listado</item-->
        <item name="android:drawablePadding">@dimen/apatxas_padding_entre_imagen_texto</item>
        <item name="android:layout_height">@dimen/apatxas_altura_elemento_listado</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/apatxas_padding_izquierdo_cabecera_listado</item>
        <item name="android:paddingRight">@dimen/apatxas_padding_derecho_cabecera_listado</item>
