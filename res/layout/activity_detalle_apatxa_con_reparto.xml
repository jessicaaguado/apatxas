<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    style="@style/apatxas_detalle_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jagusan.apatxas.activities.DetalleApatxaActivity" >

    <include layout="@layout/subactivity_informacion_apatxa_editable"/>

    <LinearLayout
        android:id="@+id/informacionPersonasApatxaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separador1DetalleApatxa"
        android:gravity="center_vertical"       
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/numeroPersonasApatxaDetalle"
            style="@style/apatxas_valor_defecto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="x Personas" />

        <ImageButton
            android:id="@+id/botonEditarInformacionPersonasApatxas"
            style="@style/apatxas_boton_solo_icono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="Editar información personas"
            android:src="@drawable/ic_action_apatxas_modificar_personas_detalle" />
    </LinearLayout>

    <View
        android:id="@+id/separador2DetalleApatxa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/informacionPersonasApatxaDetalle"
                
        android:background="@color/apatxascolors_color_linea_divisoria" />
    
    <LinearLayout
        android:id="@+id/informacionGastosApatxaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separador2DetalleApatxa"
        android:gravity="center_vertical"       
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/resumenGastosApatxaDetalle"
            style="@style/apatxas_valor_defecto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="x Gastos - Total: 34,00 €" />

        <ImageButton
            android:id="@+id/botonEditarInformacionGastosApatxas"
            style="@style/apatxas_boton_solo_icono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="Anadir gasto"
            android:src="@drawable/ic_action_apatxas_anadir_gasto_detalle_apatxa" />
    </LinearLayout>
    
    <View
        android:id="@+id/separador3DetalleApatxa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/informacionGastosApatxaDetalle"
        android:layout_marginBottom="@dimen/apatxas_linea_divisora_margen_inferior"        
        android:background="@color/apatxascolors_color_linea_divisoria" />    

    <TextView
        android:id="@+id/estadoApatxaDetalle"
        style="@style/apatxas_valor_destacado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador3DetalleApatxa"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="( Pagado )" />

</RelativeLayout>