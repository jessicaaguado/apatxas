<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listaVaciaInfoSubactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/apatxas_padding_izquierdo_defecto"
    android:paddingRight="@dimen/apatxas_padding_derecho_defecto">


    <ImageView
        android:id="@+id/imagen_lista_vacia"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_apatxas_aviso_lista_vacia_listados" />

    <TextView
        android:id="@+id/informacion_lista_vacia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/apatxas_altura_elemento_listado"
        android:layout_below="@+id/imagen_lista_vacia"
        android:gravity="center_horizontal|center_vertical"
        android:text="La lista está vacía"
        android:textColor="@color/apatxascolors_color_claro"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="normal" />


    <Button
        android:id="@+id/anadir_elementos_mas_tarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/informacion_lista_vacia"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:drawablePadding="0dp"
        android:drawableRight="@drawable/ic_apatxas_siguiente"
        android:layout_marginTop="@dimen/apatxas_padding_superior_extra"
        android:text="Añadir elementos más tarde"
        android:padding="@dimen/apatxas_padding_superior_extra"
        android:textColor="@color/apatxascolors_color"
        android:textAllCaps="false"/>

</RelativeLayout>