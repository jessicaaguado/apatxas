<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/listaGastosApatxaCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/apatxascolors_color_cabecera_lista"
        android:drawableLeft="@drawable/ic_apatxas_gastos"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:padding="@dimen/apatxas_padding_defecto"
        android:textAppearance="@style/texto_cabecera_lista" />

    <ListView
        android:id="@+id/listaGastosApatxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/apatxascolors_color_linea_divisoria_lista"
        android:dividerHeight="1px" />

</merge>